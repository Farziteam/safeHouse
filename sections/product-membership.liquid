<script>
    function toggleCard(cardIndex) {
        const section = document.getElementById(`section-${cardIndex}`);
        const arrowButton = document.getElementById(`arrow-${cardIndex}`);

        // Check if the section is currently displayed
        if (section.style.display === "block") {
            // Hide the section
            section.style.display = "none";
            arrowButton.textContent = "▼"; // Change arrow to down
        } else {
            // Hide all sections
            document.querySelectorAll(".member-card-section2").forEach((sec) => {
            sec.style.display = "none";
            });

            // Set all arrow buttons back to ▼
            document.querySelectorAll(".expand-button").forEach((btn) => {
             btn.textContent = "▼";
            });

            // Display the clicked member-card section
            section.style.display = "block";
            arrowButton.textContent = "▶"; // Change arrow to up
        }
    }

    window.addEventListener("resize", function () {
        // Check if the screen width is greater than 768px (desktop view)
        if (window.innerWidth > 768) {
            document.querySelectorAll(".member-card-section2").forEach((sec) => {
            sec.style.display = "block"; // Show all sections on larger screens
            });

            // Reset all arrow buttons to ▼ since no toggle is needed on large screens
            document.querySelectorAll(".expand-button").forEach((btn) => {
            btn.textContent = "▼";
            });
        } else {
            // Hide all sections on mobile view (initial state)
            document.querySelectorAll(".member-card-section2").forEach((sec) => {
            sec.style.display = "none";
            });
        }
    });
</script>