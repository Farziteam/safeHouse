<style>
    .need-help-container{
        margin-top: 4rem;
        margin-bottom: 4rem;
        display: flex;
        flex-direction: column;
        align-items: center;

    }

    .need-help-head{
        font-family: "TomatoGrotesk_M", sans-serif !important;
        font-size: 4rem;
        font-weight: 400;
        padding: 2rem;
        color: #000;
    }
    .need-help-card{
        display: flex;
        justify-content: space-between;
        gap: 2rem;
        align-items: center;
        background-color: #f7f4ff;
        border-radius: 5rem;
        padding: 2rem;
        width: 80%;
    }

    .contact-card{
        background-color: white;
        width: 48%;
        border-radius: 4rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
    }

    .contact-card div{
        font-family: Inter !important;
    }

    .need-help-card a{
        text-decoration: none;
        color:#212636;
        
    }

    @media screen and (max-width: 768px){
        .need-help-card{
            flex-direction: column;
            width: 95%;
            border-radius: 2rem;
        }

        .need-help-head{
            text-align: center;
            font-size: 2.8rem;
        }
        .contact-card{
            padding: 1rem 2rem;
        }

        .contact-card{
            width: 100%;
        }
    }
</style>

<div class="need-help-container">

    <div class="need-help-head">Need Help? Contact Us</div>
    <div class="need-help-card">
        <a href={{"mailto:" |  append: section.settings.need_email}} class="contact-card">
            <div>{{section.settings.need_email}}</div>
            <img width="" height="" src="https://cdn.shopify.com/s/files/1/0006/5418/0388/files/image_190.png?v=1727942876"/>
        </a>

        <a href={{ "https://wa.me/+91" | append: section.settings.need_whatsapp }} target="_blank" class="contact-card">
            <div>+91 {{section.settings.need_whasapp}}</div>
            <img width="" height="" src="https://cdn.shopify.com/s/files/1/0006/5418/0388/files/Avatar_1.png?v=1727942876"/>
        </a>
    </div>
</div>

{%schema%}
{
    "name": "Need Help Contact",
    "settings": [
        {
            "label": "Contact Email",
            "id": "need_email",
            "type": "text"
        },
        {
            "label": "Contact Whatsapp",
            "id": "need_whasapp",
            "type": "text"
        },
    ]
}
{%endschema%}