<style>
    .social-media-container{
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        overflow: hidden;
    }

    .social-media-iconss{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4rem;
    }

    .social-media-item{
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 2rem;
        cursor: pointer;
        text-decoration: none;
        color: #545454;
        
    }

    .social-media-item img{
        width: 3rem;
        height: 3rem;
    }

    @media screen and (max-width: 768px){
        .social-media-item img{
            width: 1.2rem;
            height: 1.2rem;
        }

        .social-media-iconss{
            gap: 1rem;
        }

        .social-media-item{
            padding: 0.5rem;
            gap: 0.5rem;
        }

        .social-media-item div{
            font-size: 1rem;
        }
    }

</style>
<div class="social-media-container">
  
    <div class="social-media-iconss">
        <a href={{section.settings.socail_url1}} target="_blank" class="social-media-item">
            <img src={{section.settings.social_icon1 | image_url }}/>
        
            <div>{{section.settings.social_text1}}</div>
        </a>
        <a href={{section.settings.socail_url2}}  class="social-media-item">
            <img src={{section.settings.social_icon2 | image_url }}/>
            
            <div>{{section.settings.social_text2}}</div>
        </a>
        <a href={{section.settings.socail_url3}} class="social-media-item">
            <img src={{section.settings.social_icon3 | image_url }}/>
            <div>{{section.settings.social_text3}}</div>
        </a>
        <a href={{section.settings.socail_url4}} class="social-media-item">
            <img src={{section.settings.social_icon4 | image_url }}/>

            <div>{{section.settings.social_text4}}</div>
        </a>
    </div>
</div>

