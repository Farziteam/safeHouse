<script>
    document.addEventListener('DOMContentLoaded', function () {
        const swiper = new Swiper('.pdp-feature-swiper', {
            direction: 'horizontal',
            loop: false,
            slidesPerView: 'auto',
            pagination: {
                el: '.pdp-feature-pagination',
                clickable: true,
                renderBullet: function (index, className) {
                    return '<span class= pdp-feature-bullet "' + className + '">'  + "</span>";
                },
                
            },
            spaceBetween: 0,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false,
            },
            lazy: true,
           
        });
    });
</script>