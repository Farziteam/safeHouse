<style>
    .pdp-feature-container{
        padding: 4rem 6rem;
        background-color: #f7f4ff;
        overflow: hidden;
    }
    .pdp-slide-card{
        position: relative;
        width: 100%;
        height: 100%;
        background-size: cover;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        color: white;
        text-align: left;
        background-image: url(https://cdn.shopify.com/s/files/1/0006/5418/0388/files/image_2.png?v=1727354647);
        background-position: center;
        padding: 0px 4rem;
    }

    .pdp-slide-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        
    }

    .pdp-slide{
        width: 100%;
          
    }
    .swiper-container{
        width: 90vw;
        overflow: hidden;
        position: relative;
    }
    .pdp-feature-pagination{
        position: relative;
        margin-top: 2.2rem;
        margin-bottom: 0.2rem;
        top: 99% !important;
        left: 0% !important;
    }
    .

    .feature-head{
       padding: 0rem 4rem;
       width: 70%;
    }

    .feature-header-text{
        color: white; 
        font-size:5rem; 
        font-weight:600;
    }
    .mobile-mock{
       
        position: relative;
        bottom: -20.35%;
    }

    .pdp-feature-bullet{
      width: 2.5rem !important;
      height: 0.5rem !important;
      text-align: center;
      line-height: 20px !important;
      font-size: 12px;
      color: #000;
      opacity: 1;
      background: rgba(0, 0, 0, 0.2) !important;
      border-radius: 2rem;
    }

    .pdp-feature-bullet-active {
      color: #fff !important;
      background: #652fff !important;
      width: 5rem;
    }

    .get-button{
        width: 20%;
    }
    @media screen and (max-width: 768px) {
        .pdp-feature-container{
            padding: 1rem 2rem;
        }
        .slider-card{
            background-image: url(https://cdn.shopify.com/s/files/1/0006/5418/0388/files/image_6.png?v=1727698137);
        }
        .slider-card{
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 0rem 1rem;
            padding-top: 1rem;
            width: auto;
        }

        .feature-header-text{
            color: white; 
            font-size:3rem; 
            font-weight:400;
        }
        .mobile-mock{
            width: 89% ;
            bottom: -21.35%;
        }

        .get-button{
            width: 37%;
        }
    }

</style>
