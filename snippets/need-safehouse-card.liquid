<style>
.need-card{
    /* background-color: {{bgColor}};  */
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    justify-content: center; 
    gap: 1rem;
    padding: 3rem 2rem;
    width: 23%;
    border-radius: 1rem;
  
}

/* .{{ bgColor }}{
    background-color: {{bgColor}};
} */
.need-card-icon{
    margin-top: 0.5rem;
    width: 10rem;
}

.need-card-text{
    color: #787676;
    font-size: 1.3rem;
    font-family: "Inter", sans-serif !important;
    font-weight: 400;
    line-height: 1.5rem;
    min-height: 9rem;
    margin-bottom: 0px;
}

.need-card-head{
    font-weight: 500;
    font-family: "Inter", sans-serif !important;
    margin: 0px;
}



@media screen and (max-width: 768px) {
    .need-card{
        width: 48%;
        padding: 3rem 1rem;
    }
    .need-card-icon{
        width: 5rem;
    }

    .need-card-head{
        margin: 0px;
        font-size: 1.8rem;
    }

    .need-card-text{
        font-size: 1rem;
        line-height: 1.2rem;
        min-height: max-content;

    }


    
}
</style> 


<div class="need-card" style="background-color: {{ bgColor }};">

    
    <img class="need-card-icon" src={{icon}}/>
   
    <div>
        <h3 class="need-card-head" >{{title}}</h3>
        <p class="need-card-text">{{text}}</p>
    </div>
</div>